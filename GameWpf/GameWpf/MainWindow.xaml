<Window x:Class="GameWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="Gray" Icon="./Resources/dice.png" ResizeMode="CanResize">
    <Canvas Name="canvas">
        <Button Name="btnCancel" IsCancel="true" Click="BtnCancel_Click" Visibility="Hidden">Cancel</Button>
        <Rectangle x:Name="Bar" Fill="Black" HorizontalAlignment="Left" Height="25" Stroke="Black" VerticalAlignment="Top" Width="250" Canvas.Left="225" Canvas.Top="384"/>
        <Rectangle Name="Ball" Canvas.Left="370" Fill="Gray" Stroke="Gray" Width="25" Height="25" Canvas.Top="150"/>
        <Rectangle x:Name="Ball1" Canvas.Left="370" Fill="Red" Stroke="Black" Width="25" Height="25" Canvas.Top="150"/>
        <TextBlock Name="PlayerScore"  TextWrapping="Wrap" Text="Score: 0" Canvas.Left="10" Canvas.Top="10" RenderTransformOrigin="0.479,-1.003"/>
        <TextBlock Name="Pos"  TextWrapping="Wrap" Text="Score: 0" Canvas.Left="10" Canvas.Top="49" RenderTransformOrigin="0.479,-1.003"/>
    </Canvas>

</Window>
